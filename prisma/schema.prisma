model FooterInfo {
  id        String   @id @default(cuid())
  type      String
  value     String
  isEnabled Boolean
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("footer_info")
}
